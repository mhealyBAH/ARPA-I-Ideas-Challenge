<div class="max-w-7xl mx-auto" id="gov-banner">
  <div class="max-w-7xl mx-auto">
    <img
      src="https://www.transportation.gov/themes/custom/dot_cms/images/assets/us_flag_small.svg"
      class="usa-banner-flag"
      alt=""
    />
    <span>
      An official website of the United States government
      <button id="toggleInfoBtn">
        Here's how you know
        <i class="fa-solid arrow-icon fa-angle-down" id="arrowIcon"></i>
      </button>
    </span>
  </div>
  <div class="flex-wrap hidden" id="info">
    <div class="md:basis-1/2 flex">
      <div class="official-img m-2">
        <img
          src="https://www.transportation.gov/themes/custom/dot_cms/images/assets/icon-dot-gov.svg"
          alt="dot gov icon"
        />
      </div>
      <div class="official-text m-2">
        <p class="fw-semibold">Official websites use .gov</p>
        <p>
          A <span class="fw-semibold">.gov</span> website belongs to an official government organization in the United States.
        </p>
      </div>
    </div>
    <div class="md:basis-1/2 flex">
      <div class="secure-img m-2">
        <img src="https://www.transportation.gov/themes/custom/dot_cms/images/assets/icon-https.svg" alt="" />
      </div>
      <div class="secure-text m-2">
        <p class="fw-semibold">Secure .gov websites use HTTPS</p>
        <p>
          A <span class="fw-semibold">lock</span> ( <i class="fa-solid fa-lock fa-xs"></i> ) or
          <span class="fw-semibold">https://</span> means you've safely connected to the .gov website. Share sensitive information
          only on official, secure websites.
        </p>
      </div>
    </div>
  </div>
</div>
<script>
  const btn = document.getElementById("toggleInfoBtn");
  const info = document.getElementById("info");
  const icon = document.getElementById("arrowIcon");
  let infoOpened = false;

  btn!.addEventListener("click", () => {
    infoOpened = !infoOpened;
    info!.classList.toggle("hidden", !infoOpened);
    info!.classList.toggle("flex", infoOpened);
    icon!.classList.toggle("fa-angle-down", !infoOpened);
    icon!.classList.toggle("fa-angle-up", infoOpened);
  });
</script>

